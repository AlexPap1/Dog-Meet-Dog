<div class="card mb-1">
    <div class="card-header card-title"> 
       {{title}}
    </div>
    <div class="card-body card-body-text"> 
         <!--Add PET name/info for each post, include image within post_content-->
        <img src={{imageURL}} />

        {{post_content}}

        <br>
        <!--Add pet info in below 'by' section-->
        <div class="post-comments-info float-end">
           <span class="plain-text">By</span> <span class="info-text">{{user.username}}</span> <span class="plain-text">on</span> <span class="info-text">{{format_date created_at}}</span>
            <span class="plain-text">|</span>
           <a href="/post/{{id}}" class="comment-link">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
  </div>