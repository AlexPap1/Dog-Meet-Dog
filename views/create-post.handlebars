<section>
  <form class="new-post-form" id="upload" method="post" enctype="multipart/form-data">
    <div class="container">
      <h2 class="create-title"> Create New Post</h2>
      <hr class="create-hr">
      <div>
        <label for="post-title" class="post-title">Title</label>
        <input type="text" name="post_title" id="post-title" placeholder="This is my Title" />
      </div>
      <div>
        <label for="post-content" class="post-content">Content</label>
        <input type="text" name="post_content" id="post-content" placeholder="This is my Contents" />
      </div>
      <div>
        <label for="imageUpload" class="imageUpload">Image</label>
        <input type="file" name="image" id="imageUpload" />
      </div>
      <div>
        <label for="fileName" class="fileName">File Name</label>
        <input type="text" name="fileName" id="fileName" placeholder="This is my File Name" />
      </div>
      <button type="submit" class="btn">Create</button>
    </div>
  </form>
</section>

